# Database Configuration
DATABASE_URL=sqlite:///./src/data/tracker.db

# Hashdive API (optional)
# Get your API key from Hashdive/Hashmaps
HASHDIVE_API_KEY=your-api-key-here
HASHDIVE_API_URL=https://api.hashdive.io

# Email Configuration
# Configure your SMTP email settings for notifications
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_USE_TLS=true
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=recipient@example.com

# Poller Configuration
POLL_INTERVAL_SECONDS=60
INITIAL_LOOKBACK_DAYS=7

# Alert Settings
MIN_TRADE_SIZE_USD=100

# Logging
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Frontend Configuration
API_BASE_URL=http://localhost:8080
