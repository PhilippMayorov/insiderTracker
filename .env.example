# Email Configuration
# Configure your SMTP email settings for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
FROM_EMAIL=your-email@gmail.com
TO_EMAILS=recipient1@example.com,recipient2@example.com

# Hashdive API (optional)
# Get your API key from Hashdive/Hashmaps
HASHDIVE_API_KEY=your-api-key-here
HASHDIVE_API_URL=https://api.hashdive.io

# Trade Tracking Configuration
TRADE_DB_PATH=data/trades.db
MIN_TRADE_SIZE_USD=100

# Alert Settings
# Set to true to batch multiple alerts together
BATCH_ALERTS=false
# Time window in seconds for batching alerts (if BATCH_ALERTS=true)
BATCH_WINDOW_SECONDS=300

# Logging
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
